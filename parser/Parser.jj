String mathElement() :
{
  Token t;  
  String id;
}
{
  (
    t = < NUMBER >
    {
    	//System.out.println(" Number : "+ t.image);
		return t.image;
    }
  | id = ID()
    {
    	//System.out.println(" ID : "+ id );    
    	return id;
    }  
  )
}

String ID() :
{
  Token t;
}
{
  t = < ID >
  {
